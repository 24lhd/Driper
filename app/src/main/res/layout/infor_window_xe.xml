<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@drawable/shape_infor_window"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="Thông điệp:"
        android:id="@+id/tv_infor_wd_xe_thong_diep"
        android:layout_gravity="left"
        android:textColor="@color/colorAccent"
        android:gravity="left"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Mã sinh viên: "
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/md_blue_500"
            android:id="@+id/tv_infor_wd_xe_msv"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Biển số xe: "
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_infor_wd_xe_bsx"
            android:layout_marginLeft="10dp"
            android:textColor="@color/md_blue_500"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Vị trí hiện tại: "
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/md_blue_500"
            android:id="@+id/tv_infor_wd_xe_vi_tri"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>