<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:padding="2dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="48dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_driver"
        android:id="@+id/im_item_tim_nguoi"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:layout_height="48dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Thông điệp:"
            android:id="@+id/tv_item_tim_nguoi_thong_diep"
            android:layout_marginLeft="2dp"
            android:layout_gravity="left"
            android:textColor="@color/colorAccent"
            android:gravity="left"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Mã sinh viên: "
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:textColor="@color/md_blue_500"
                android:id="@+id/tv_item_tim_nguoi_msv"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Biển số xe: "
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_item_tim_nguoi_bsx"
                android:layout_marginLeft="2dp"
                android:textColor="@color/md_blue_500"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Đang ở: "
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/md_blue_500"
                android:id="@+id/tv_item_tim_nguoi_vi_tri"
                android:layout_marginLeft="2dp"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>