<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:padding="2dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="48dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_student"
            android:id="@+id/im_item_tim_xe"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:layout_height="48dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Thông điệp:"
                android:textColor="@color/colorAccent"
                android:layout_gravity="left"
                android:id="@+id/tv_item_tim_xe_thong_diep"
                android:gravity="left"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Mã sinh viên: "
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/md_blue_500"
                    android:id="@+id/tv_item_tim_xe_msv"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Vị trí hiện tại: "
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/md_blue_500"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_item_tim_xe_vi_tri"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Điểm đến: "
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/md_blue_500"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_item_tim_xe_diem_den"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Giá tiền: "
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/md_blue_500"
                    android:id="@+id/tv_item_tim_xe_gia_tien"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>